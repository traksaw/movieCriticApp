<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="description" content="Minimalist movie critic application">
    <meta name="keywords" content="movies, reviews, bootstrap, minimal design">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Mini-Movie Critic</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Yeseva+One&display=swap"
        rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>

<body class="bg-light text-dark">
    <header class="bg-primary text-white py-3 mb-4">
        <div class="container text-center">
            <h1 class="display-4">Mini-Movie Critic</h1>
            <p class="lead">Review and track your most recent movie selections.</p>
        </div>
    </header>


    <div class="container">
        <!-- Add a Movie Form -->
        <section class="mb-4">
            <h2 class="text-primary">Add a Movie</h2>
            <form action="/movies" method="post" class="row g-3 shadow-sm p-3 bg-white rounded">
                <div class="col-md-6">
                    <label for="genre" class="form-label">Choose a genre:</label>
                    <select name="genres" id="genreSelect" class="form-select" required>
                        <option value="">--Please choose an option--</option>
                        <option value="Action">Action</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Drama">Drama</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Horror">Horror</option>
                        <option value="Mystery">Mystery</option>
                        <option value="Romance">Romance</option>
                        <option value="Sci-Fi">Sci-Fi</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Western">Western</option>
                        <option value="Animation">Animation</option>
                        <option value="Musical">Musical</option>
                        <option value="Documentary">Documentary</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="movieInput" class="form-label">Movie Name:</label>
                    <input type="text" id="ogMovieTitle" name="title" class="form-control"
                        placeholder="Enter movie title..." required>
                </div>
                <div class="col-12">
                    <button type="submit" id="submitBtn" class="btn btn-primary w-100">Submit</button>
                </div>
            </form>
        </section>


        <section>
            <h3 class="text-success">My Movies</h3>

            <ul class="movies list-unstyled">
                <% for(var i=0; i < movies.length; i++) {%>
                    <li class="movieItem bg-white p-3 mb-3 rounded shadow-sm">
                        <p class="titlePoint h5 mb-2">
                            <%= movies[i].title %>
                        </p>
                        <p class="genresPoint mb-1">
                            <%= movies[i].genres %>
                        </p>
                        <a class="countPoint mb-3">
                            <%= movies[i].count %>
                        </a>
                        <div class="d-flex align-items-center gap-2">
                            <a class="btn btn-outline-success btn-sm"><i class="fa fa-heart" aria-hidden="true"></i></a>
                            <a class="btn btn-outline-danger btn-sm"><i class="fa fa-heart-broken"
                                    aria-hidden="true"></i></a>
                            <a class="btn btn-outline-secondary btn-sm"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </div>
                        <button class="editBtn btn btn-sm btn-outline-info mt-3">Edit</button>
                        <!-- edit section -->
                        <form class="editForm" style="display: none">
                            <div class="mb-2">
                                <input type="text" name="newTitle" class="newTitle" placeholder="Change title name..."
                                    required>
                            </div>
                            <div class="mb-2">
                                <select name="newGenres" class="newGenres" required>

                                    <option value="">--Please choose a new option--</option>

                                    <option value="Action">Action</option>
                                    <option value="Adventure">Adventure</option>
                                    <option value="Comedy">Comedy</option>
                                    <option value="Drama">Drama</option>
                                    <option value="Fantasy">Fantasy</option>
                                    <option value="Horror">Horror</option>
                                    <option value="Mystery">Mystery</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Sci-Fi">Sci-Fi</option>
                                    <option value="Thriller">Thriller</option>
                                    <option value="Western">Western</option>
                                    <option value="Animation">Animation</option>
                                    <option value="Musical">Musical</option>
                                    <option value="Documentary">Documentary</option>
                                </select>
                            </div>
                            <button type="submit" class='btn btn-success editSubmitBtn'>Save</button>
                        </form>
                    </li>
                    <% } %>
            </ul>
        </section>
    </div>
    <script src="js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>